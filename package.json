{
  "name": "greeting-service",
  "version": "0.0.0",
  "description": "Greeting service",
  "author": "kevinpollet <pollet.kevin@gmail.com>",
  "license": "MIT",
  "private": true,
  "keywords": [
    "typescript",
    "greeting-service",
    "fastify"
  ],
  "bugs": "https://github.com/kevinpollet/typescript-multistage-docker/issues",
  "homepage": "https://github.com/kevinpollet/typescript-multistage-docker#readme",
  "repository": "github:kevinpollet/typescript-multistage-docker",
  "main": "lib/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf lib coverage",
    "format": "prettier --write '*.{yml,json,md}' '{src,test}/**/*'",
    "prebuild": "run-s clean",
    "prestart": "run-s build",
    "prestart:watch": "run-s build",
    "start": "node .",
    "start:watch": "tsc-watch --onSuccess 'node .'",
    "test": "jest --preset ts-jest --coverage --collectCoverageFrom='src/**/*.ts'"
  },
  "dependencies": {
    "fastify": "2.5.0"
  },
  "devDependencies": {
    "@kevinpollet/tsconfig": "0.1.0",
    "@types/jest": "24.0.15",
    "@types/node": "12.0.8",
    "husky": "2.4.1",
    "jest": "24.8.0",
    "lint-staged": "8.2.1",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.2",
    "tsc-watch": "2.2.1",
    "typescript": "3.5.2"
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,yml,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
