{
  "name": "greeting-service",
  "version": "0.0.0",
  "description": "Greeting service",
  "author": "kevinpollet <pollet.kevin@gmail.com>",
  "license": "MIT",
  "keywords": [
    "typescript",
    "greeting-service",
    "fastify"
  ],
  "homepage": "https://github.com/kevinpollet/typescript-multistage-docker#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevinpollet/typescript-multistage-docker.git"
  },
  "bugs": {
    "url": "https://github.com/kevinpollet/typescript-multistage-docker/issues"
  },
  "main": "lib/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf lib coverage",
    "format": "prettier --write '*.{yml,json,md}' '{src,test}/**/*.ts'",
    "prebuild": "run-s clean",
    "prestart": "run-s build",
    "prestart:watch": "run-s build",
    "start": "node .",
    "start:watch": "tsc-watch --onSuccess 'node .'",
    "test": "jest --coverage --collectCoverageFrom='src/**/*.ts'"
  },
  "dependencies": {
    "fastify": "2.2.0"
  },
  "devDependencies": {
    "@kevinpollet/tsconfig": "0.1.0",
    "@types/jest": "24.0.11",
    "@types/node": "10.14.4",
    "husky": "1.3.1",
    "jest": "24.7.1",
    "lint-staged": "8.1.5",
    "npm-run-all": "4.1.5",
    "prettier": "1.17.0",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.2",
    "tsc-watch": "2.1.2",
    "typescript": "3.4.3"
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{yml,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest"
  }
}
